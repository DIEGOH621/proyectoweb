<div class="row center-xs">
  <div class="col-xs-8 col-md-6">
    <div class="box text-left">

<h2>Crear cuenta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "Correo" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "Correo", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, "Contrase単a" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "Contrase単a", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar contrase単a" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Confirmar contrase単a", class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Crear cuenta", class:"btn white" %>
  </div>
<% end %>

<div class="actions">
  <%= render "devise/shared/links" %>
</div>

    </div>    
  </div>
</div>
